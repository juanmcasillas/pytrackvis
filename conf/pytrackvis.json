{
    "verbose": true,
    
    "points": {
        "optimize": true,
        "filter": true
    },
    "database": {
        "file": "db/trackdb.db",
        "script": "db/trackdb.sql"
    },
    "proxy": {
        "enabled": false,
        "url": "http://proxy.senado.es:8080"
    },
    "tokens": {
        "MAPTILER_KEY": ""
    },
    "api_key_file": "conf/tokens.ini",
    "logs": {
        "level": "INFO",
        "format": "[%(asctime)s] %(levelname)s in %(module)s:%(funcName)s:%(lineno)d: %(message)s",
        "app": "logs/app.log"
    },
    "osm_cache": {
        "enabled": true,
        "directory": "osm_cache",
        "debug": true
    },
    "sim_preview": {
        "sim_previews_dir": "ssim",
        "draw_bar": false,
        "draw_ccw": false,
        "draw_startstop": false,
        "draw_center": false,
        "track_size": [150, 150],
        "track_width": 2

    },
    "map_preview": {
        "track_previews_dir": "webapp/static/img/track_previews",
        "unsafe_ssl": true,
        "draw_bar": true,
        "draw_ccw": true,
        "draw_startstop": true,
        "draw_center": true,

        "use_gradient": true,
        "gradient_value": "elevation",
        "track_size": [450, 250],
        "track_color": [255, 255, 80],
        "track_width": 3,

        "direction_width":  2,
        "arrow_width": 6,
        "radius": 8,
        "small_img_size": 400,
        "direction_width_big": 3,
        "arrow_width_big": 8,
        "radius_big": 20,

        "direction_color": [255, 0, 0],
        "arrows_color": [240, 10, 10],
        "center_color": [100, 100, 200],
        "center_radius": 2,

        "start_color": [10, 220, 10],
        "start_radius": 3,
        "start_outline_color": [10, 100, 10],
        "end_color": [220, 10, 10],
        "end_radius": 3,
        "end_outline_color": [100, 10, 10]
    }
}